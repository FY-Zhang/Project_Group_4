<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".friendlistActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3872AA"
        android:minHeight="?attr/actionBarSize"
        android:scrollbarStyle="outsideOverlay"
        android:theme="?attr/actionBarTheme"
        app:title="Friendlist" />


    <fragment
        android:id="@+id/fragment_search"
        android:name="com.example.groupproject.fragment_search"
        android:layout_width="match_parent"

        android:layout_height="52dp" />


    <fragment
        android:id="@+id/fragment_friendlist"
        android:name="com.example.groupproject.fragment_friendlist"
        android:layout_width="match_parent"

        android:layout_height="562dp" />

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/friendlist"
            style="@style/FirebaseUI.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="toFriendlist"
            android:text="@string/chats"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/channel"
            style="@style/FirebaseUI.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="toChannel"
            android:text="@string/discover"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/setting"
            style="@style/FirebaseUI.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="toSetting"
            android:text="Setting"
            android:textAllCaps="false" />
    </LinearLayout>


</LinearLayout>