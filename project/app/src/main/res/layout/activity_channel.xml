<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".channel">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3872AA"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="Channel"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="75dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="150dp">

        <Button
            android:id="@+id/channel1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/channel2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="240dp">

        <Button
            android:id="@+id/channel3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 3"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/channel4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 4"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="330dp">

        <Button
            android:id="@+id/channel5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 5"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/channel6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 6"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="420dp">

        <Button
            android:id="@+id/channel7"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 7"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/channel8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 8"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="510dp">

        <Button
            android:id="@+id/channel9"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 9"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/channel10"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:text="Channel 10"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="116dp"
            android:layout_weight="1"/>
    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#707070"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/friendlist"
            style="android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#707070"
            android:text="Friends" />

        <Button
            android:id="@+id/channel"
            style="android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#707070"
            android:text="Channel" />

        <Button
            android:id="@+id/setting"
            style="android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#707070"
            android:text="Setting" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>